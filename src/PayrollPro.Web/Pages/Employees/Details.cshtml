@page "/Employees/Details/{id}"
@using PayrollPro.Employees
@using PayrollPro.Web.Pages.Employees
@model DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}

@section styles {
    <link rel="stylesheet" href="~/css/employee-management-modern.css" />
}

<div class="employee-management-container">
    <!-- Modern Professional Header -->
    <div class="employee-header">
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1>
                        <i class="fas fa-user me-3"></i>
                        Employee Details
                    </h1>
                    <p class="subtitle">View complete employee information</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="/Employees/Edit/@Model.Employee.Id" class="btn-add-employee">
                        <i class="fas fa-edit"></i>
                        Edit Employee
                    </a>
                    <a href="/Employees?companyId=@Model.Employee.CompanyId" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-2"></i> Back to Employees
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Details Card -->
    <div class="details-container">
        <div class="employee-details-card">
            <!-- Employee Header -->
            <div class="employee-details-header">
                <div class="employee-avatar-large">
                    @Model.Employee.FirstName.Substring(0, 1)@Model.Employee.LastName.Substring(0, 1)
                </div>
                <div class="employee-main-info">
                    <h2>@Model.Employee.FullName</h2>
                    <p class="employee-title">@Model.Employee.Position</p>
                    <p class="employee-department">@Model.Employee.Department</p>
                    <div class="employee-status-large">
                        <span class="status-badge-large status-@(Model.Employee.Status.ToString().ToLower())">
                            @Model.Employee.Status
                        </span>
                    </div>
                </div>
                <div class="employee-quick-stats">
                    <div class="quick-stat">
                        <div class="stat-value">@Model.Employee.FormattedSalary</div>
                        <div class="stat-label">Annual Salary</div>
                    </div>
                    <div class="quick-stat">
                        <div class="stat-value">@Model.Employee.YearsOfService</div>
                        <div class="stat-label">Years of Service</div>
                    </div>
                </div>
            </div>

            <!-- Employee Information Grid -->
            <div class="employee-info-grid">
                <!-- Personal Information -->
                <div class="info-section">
                    <h3><i class="fas fa-user-circle me-2"></i>Personal Information</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Full Name</label>
                            <value>@Model.Employee.FullName</value>
                        </div>
                        <div class="info-item">
                            <label>Email</label>
                            <value>
                                <a href="mailto:@Model.Employee.Email" class="email-link">
                                    <i class="fas fa-envelope me-1"></i>
                                    @Model.Employee.Email
                                </a>
                            </value>
                        </div>
                        <div class="info-item">
                            <label>Phone</label>
                            <value>
                                @if (!string.IsNullOrEmpty(Model.Employee.Phone))
                                {
                                    <a href="tel:@Model.Employee.Phone" class="phone-link">
                                        <i class="fas fa-phone me-1"></i>
                                        @Model.Employee.Phone
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </value>
                        </div>
                        <div class="info-item">
                            <label>Employee ID</label>
                            <value>@Model.Employee.EmployeeId</value>
                        </div>
                    </div>
                </div>

                <!-- Employment Information -->
                <div class="info-section">
                    <h3><i class="fas fa-briefcase me-2"></i>Employment Information</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Company</label>
                            <value>
                                <span class="company-badge-details">
                                    <i class="fas fa-building me-1"></i>
                                    @Model.Employee.CompanyName
                                </span>
                            </value>
                        </div>
                        <div class="info-item">
                            <label>Department</label>
                            <value>@Model.Employee.Department</value>
                        </div>
                        <div class="info-item">
                            <label>Position</label>
                            <value>@Model.Employee.Position</value>
                        </div>
                        <div class="info-item">
                            <label>Status</label>
                            <value>
                                <span class="status-badge-details status-@(Model.Employee.Status.ToString().ToLower())-details">
                                    @Model.Employee.Status
                                </span>
                            </value>
                        </div>
                        <div class="info-item">
                            <label>Hire Date</label>
                            <value>@Model.Employee.HireDate.ToString("MMMM dd, yyyy")</value>
                        </div>
                        <div class="info-item">
                            <label>Years of Service</label>
                            <value>@Model.Employee.YearsOfService years</value>
                        </div>
                    </div>
                </div>

                <!-- Financial Information -->
                <div class="info-section">
                    <h3><i class="fas fa-dollar-sign me-2"></i>Financial Information</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Annual Salary</label>
                            <value class="salary-display">@Model.Employee.FormattedSalary</value>
                        </div>
                        <div class="info-item">
                            <label>Monthly Salary</label>
                            <value class="salary-display">@((Model.Employee.Salary / 12).ToString("C"))</value>
                        </div>
                        <div class="info-item">
                            <label>Hourly Rate (approx.)</label>
                            <value class="salary-display">@((Model.Employee.Salary / 2080).ToString("C"))</value>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                @if (!string.IsNullOrEmpty(Model.Employee.Notes))
                {
                    <div class="info-section full-width">
                        <h3><i class="fas fa-sticky-note me-2"></i>Additional Notes</h3>
                        <div class="notes-display">
                            @Model.Employee.Notes
                        </div>
                    </div>
                }

                <!-- Record Information -->
                <div class="info-section">
                    <h3><i class="fas fa-history me-2"></i>Record Information</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Created</label>
                            <value>@Model.Employee.CreationTime.ToString("MMMM dd, yyyy 'at' h:mm tt")</value>
                        </div>
                        <div class="info-item">
                            <label>Last Modified</label>
                            <value>@Model.Employee.LastModificationTime?.ToString("MMMM dd, yyyy 'at' h:mm tt")</value>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="details-actions">
                <a href="/Payroll/Employee/@Model.Employee.Id" class="btn-action btn-payroll-details">
                    <i class="fas fa-money-bill me-2"></i>
                    View Payroll
                </a>
                <a href="/Employees/Edit/@Model.Employee.Id" class="btn-action btn-edit-details">
                    <i class="fas fa-edit me-2"></i>
                    Edit Employee
                </a>
                <a href="/Employees?companyId=@Model.Employee.CompanyId" class="btn-action btn-back-details">
                    <i class="fas fa-list me-2"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>