@page
@using Microsoft.AspNetCore.Authorization
@using PayrollPro.Permissions
@model PayrollPro.Web.Pages.IndexModel

@section styles {
    <link rel="stylesheet" href="~/css/payrollpro-dashboard.css" />
    <link rel="stylesheet" href="~/css/theme-switcher.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-calculator text-primary"></i> PayrollPro Dashboard</h1>
        <p>Welcome back! Here's what's happening with your payroll system.</p>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card border-left-primary">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Employees</div>
                    <div class="stat-content">
                        <h3>@Model.TotalEmployees</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-users fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="stat-card border-left-success">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Employees</div>
                    <div class="stat-content">
                        <h3>@Model.ActiveEmployees</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-user-check fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="stat-card border-left-info">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">This Month's Payroll</div>
                    <div class="stat-content">
                        <h3>@Model.MonthlyPayroll.ToString("C")</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-dollar-sign fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="stat-card border-left-warning">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pending Approvals</div>
                    <div class="stat-content">
                        <h3>@Model.PendingTimesheets</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-exclamation-triangle fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Cards -->
    <div class="management-grid">
        <!-- Employee Management Card -->
        <div class="management-card">
            <i class="fas fa-users text-primary"></i>
            <h3>Employee Management</h3>
            <p>Manage employee records, departments, and contact information.</p>
            <a href="/Employees" class="btn btn-primary">
                <i class="fas fa-users mr-2"></i>Manage Employees
            </a>
        </div>

        <!-- Payroll Records Card -->
        <div class="management-card">
            <i class="fas fa-money-bill-wave text-success"></i>
            <h3>Payroll Processing</h3>
            <p>Process payroll, calculate salaries, and manage tax deductions.</p>
            <a href="/PayrollRecords" class="btn btn-success">
                <i class="fas fa-play mr-2"></i>Run Payroll
            </a>
        </div>

        <!-- Timesheet Management Card -->
        <div class="management-card">
            <i class="fas fa-clock text-warning"></i>
            <h3>Timesheet Management</h3>
            <p>Track work hours, manage timesheets, and approve submissions.</p>
            <a href="/Timesheets" class="btn btn-warning">
                <i class="fas fa-clock mr-2"></i>Manage Timesheets
            </a>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <h2><i class="fas fa-bolt text-primary"></i> Quick Actions</h2>
        <div class="action-grid">
            <a href="/Employees/CreateModal" class="action-btn">
                <i class="fas fa-user-plus"></i>
                Add New Employee
            </a>
            <a href="/PayrollRecords/CreateModal" class="action-btn">
                <i class="fas fa-plus-circle"></i>
                Create Payroll Record
            </a>
            <a href="/Timesheets/CreateModal" class="action-btn">
                <i class="fas fa-clock"></i>
                Add Timesheet Entry
            </a>
            <a href="/Reports" class="action-btn">
                <i class="fas fa-chart-bar"></i>
                View Reports
            </a>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-history mr-2"></i>Recent Activity
            </h6>
        </div>
        <div class="card-body">
            <div class="list-group list-group-flush">
                <div class="list-group-item d-flex align-items-center">
                    <div class="mr-3">
                        <div class="icon-circle bg-primary">
                            <i class="fas fa-user-plus text-white"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-1">New Employee Added</h6>
                        <p class="mb-1 text-muted">John Smith was added to the payroll system</p>
                        <small class="text-muted">2 hours ago</small>
                    </div>
                </div>
                <div class="list-group-item d-flex align-items-center">
                    <div class="mr-3">
                        <div class="icon-circle bg-success">
                            <i class="fas fa-check-circle text-white"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-1">Payroll Processed</h6>
                        <p class="mb-1 text-muted">September payroll has been successfully processed</p>
                        <small class="text-muted">1 day ago</small>
                    </div>
                </div>
                <div class="list-group-item d-flex align-items-center">
                    <div class="mr-3">
                        <div class="icon-circle bg-warning">
                            <i class="fas fa-clock text-white"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-1">Timesheet Submitted</h6>
                        <p class="mb-1 text-muted">Sarah Johnson submitted her timesheet for approval</p>
                        <small class="text-muted">2 days ago</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/debug-theme.js"></script>
    <script src="~/js/simple-theme-switcher.js"></script>
    <script>
        $(function() {
            console.log('PayrollPro Dashboard: Initializing...');
            
            // Theme switcher will auto-initialize via its own script
            
            // Add hover effects and animations
            $('.management-card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );

            $('.stat-card').hover(
                function() {
                    $(this).addClass('shadow-md');
                },
                function() {
                    $(this).removeClass('shadow-md');
                }
            );
            
            // Add welcome animation
            $('.dashboard-container').css('opacity', '0').animate({opacity: 1}, 800);
        });
    </script>
}
