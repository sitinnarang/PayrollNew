@page
@using Microsoft.AspNetCore.Authorization
@using PayrollPro.Permissions
@model PayrollPro.Web.Pages.IndexModel

@section styles {
    <link rel="stylesheet" href="~/css/payrollpro-dashboard.css" />
    <link rel="stylesheet" href="~/css/theme-switcher.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .admin-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .avatar-sm {
            width: 40px;
            height: 40px;
        }
        
        .avatar-title {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: white;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            color: #5a5c69;
            font-size: 0.875rem;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }
        
        @@media (max-width: 768px) {
            .admin-stats-grid {
                grid-template-columns: 1fr;
            }
            
            .table-responsive {
                font-size: 0.875rem;
            }
        }
    </style>
}

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-calculator text-primary"></i> PayrollPro Dashboard</h1>
        <p>Welcome back! Here's what's happening with your payroll system.</p>
    </div>

    <!-- Role-based Welcome Section -->
    @if (Model.IsAdmin)
    {
        <!-- Admin Dashboard -->
        <div class="admin-welcome-section mb-4">
            <div class="alert alert-info border-left-info">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-1"><i class="fas fa-crown text-warning"></i> Admin Dashboard</h5>
                        <p class="mb-0">You have administrative access to manage all companies and system settings.</p>
                    </div>
                    <div class="col-auto">
                        <a href="/Admin/Companies" class="btn btn-primary">
                            <i class="fas fa-building"></i> Manage All Companies
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Company Stats -->
        <div class="admin-stats-grid mb-4">
            <div class="stat-card border-left-primary">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Companies</div>
                        <div class="stat-content">
                            <h3>@Model.TotalCompanies</h3>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300 stat-icon"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card border-left-success">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Companies</div>
                        <div class="stat-content">
                            <h3>@Model.ActiveCompanies</h3>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300 stat-icon"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card border-left-warning">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">System Users</div>
                        <div class="stat-content">
                            <h3>@Model.TotalEmployees</h3>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300 stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Companies Table -->
        @if (Model.Companies?.Items?.Any() == true)
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-building mr-2"></i>All Companies Overview
                    </h6>
                    <a href="/Admin/Companies" class="btn btn-sm btn-primary">
                        <i class="fas fa-external-link-alt"></i> View All
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Code</th>
                                    <th>Location</th>
                                    <th>Employees</th>
                                    <th>Status</th>
                                    <th>Established</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var company in Model.Companies.Items.Take(10))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm mr-3">
                                                    <div class="avatar-title bg-primary rounded-circle">
                                                        @company.Name.Substring(0, 1).ToUpper()
                                                    </div>
                                                </div>
                                                <div>
                                                    <strong>@company.Name</strong>
                                                    @if (!string.IsNullOrEmpty(company.Description))
                                                    {
                                                        <br><small class="text-muted">@company.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-light">@company.Code</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(company.City))
                                            {
                                                <span>@company.City, @company.State</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge badge-info">@company.EmployeeCount</span>
                                        </td>
                                        <td>
                                            @if (company.IsActive)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@company.EstablishedDate.ToString("MMM yyyy")</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/Companies/Details/@company.Id" class="btn btn-outline-primary btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/Admin/Companies/@company.Id/Manage" class="btn btn-outline-secondary btn-sm" title="Manage">
                                                    <i class="fas fa-cog"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Companies.TotalCount > 10)
                        {
                            <div class="text-center mt-3">
                                <p class="text-muted mb-0">Showing 10 of @Model.Companies.TotalCount companies</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Non-Admin User Welcome -->
        <div class="user-welcome-section mb-4">
            <div class="alert alert-primary border-left-primary">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-1"><i class="fas fa-rocket text-primary"></i> Get Started</h5>
                        <p class="mb-0">Ready to set up your company? Create your company profile to start managing payroll.</p>
                    </div>
                    <div class="col-auto">
                        <a href="/Companies/CreateCompany" class="btn btn-success btn-lg">
                            <i class="fas fa-plus-circle"></i> Create New Company
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card border-left-primary">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Employees</div>
                    <div class="stat-content">
                        <h3>@Model.TotalEmployees</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-users fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="stat-card border-left-success">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Employees</div>
                    <div class="stat-content">
                        <h3>@Model.ActiveEmployees</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-user-check fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="stat-card border-left-info">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">This Month's Payroll</div>
                    <div class="stat-content">
                        <h3>@Model.MonthlyPayroll.ToString("C")</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-dollar-sign fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>

        <div class="stat-card border-left-warning">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pending Approvals</div>
                    <div class="stat-content">
                        <h3>@Model.PendingTimesheets</h3>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-exclamation-triangle fa-2x text-gray-300 stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Cards -->
    <div class="management-grid">
        <!-- Employee Management Card -->
        <div class="management-card">
            <i class="fas fa-users text-primary"></i>
            <h3>Employee Management</h3>
            <p>Manage employee records, departments, and contact information.</p>
            <a href="/Employees" class="btn btn-primary">
                <i class="fas fa-users mr-2"></i>Manage Employees
            </a>
        </div>

        <!-- Payroll Records Card -->
        <div class="management-card">
            <i class="fas fa-money-bill-wave text-success"></i>
            <h3>Payroll Processing</h3>
            <p>Process payroll, calculate salaries, and manage tax deductions.</p>
            <a href="/PayrollRecords" class="btn btn-success">
                <i class="fas fa-play mr-2"></i>Run Payroll
            </a>
        </div>

        <!-- Timesheet Management Card -->
        <div class="management-card">
            <i class="fas fa-clock text-warning"></i>
            <h3>Timesheet Management</h3>
            <p>Track work hours, manage timesheets, and approve submissions.</p>
            <a href="/Timesheets" class="btn btn-warning">
                <i class="fas fa-clock mr-2"></i>Manage Timesheets
            </a>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <h2><i class="fas fa-bolt text-primary"></i> Quick Actions</h2>
        <div class="action-grid">
            <a href="/Employees/CreateModal" class="action-btn">
                <i class="fas fa-user-plus"></i>
                Add New Employee
            </a>
            <a href="/PayrollRecords/CreateModal" class="action-btn">
                <i class="fas fa-plus-circle"></i>
                Create Payroll Record
            </a>
            <a href="/Timesheets/CreateModal" class="action-btn">
                <i class="fas fa-clock"></i>
                Add Timesheet Entry
            </a>
            <a href="/Reports" class="action-btn">
                <i class="fas fa-chart-bar"></i>
                View Reports
            </a>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-history mr-2"></i>Recent Activity
            </h6>
        </div>
        <div class="card-body">
            <div class="list-group list-group-flush">
                <div class="list-group-item d-flex align-items-center">
                    <div class="mr-3">
                        <div class="icon-circle bg-primary">
                            <i class="fas fa-user-plus text-white"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-1">New Employee Added</h6>
                        <p class="mb-1 text-muted">John Smith was added to the payroll system</p>
                        <small class="text-muted">2 hours ago</small>
                    </div>
                </div>
                <div class="list-group-item d-flex align-items-center">
                    <div class="mr-3">
                        <div class="icon-circle bg-success">
                            <i class="fas fa-check-circle text-white"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-1">Payroll Processed</h6>
                        <p class="mb-1 text-muted">September payroll has been successfully processed</p>
                        <small class="text-muted">1 day ago</small>
                    </div>
                </div>
                <div class="list-group-item d-flex align-items-center">
                    <div class="mr-3">
                        <div class="icon-circle bg-warning">
                            <i class="fas fa-clock text-white"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-1">Timesheet Submitted</h6>
                        <p class="mb-1 text-muted">Sarah Johnson submitted her timesheet for approval</p>
                        <small class="text-muted">2 days ago</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/simple-theme-switcher.js"></script>
    <script>
        $(function() {
            console.log('PayrollPro Dashboard: Initializing...');
            
            // Theme switcher will auto-initialize via its own script
            
            // Add hover effects and animations
            $('.management-card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );

            $('.stat-card').hover(
                function() {
                    $(this).addClass('shadow-md');
                },
                function() {
                    $(this).removeClass('shadow-md');
                }
            );
            
            // Add welcome animation
            $('.dashboard-container').css('opacity', '0').animate({opacity: 1}, 800);
        });
    </script>
}
