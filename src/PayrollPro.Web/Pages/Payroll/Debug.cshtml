@page
@using PayrollPro.Web.Pages.Payroll
@model PayrollPro.Web.Pages.Payroll.DebugModel
@{
    ViewData["Title"] = "Debug - Available Companies and Employees";
}

<div class="container mt-4">
    <h2>Debug - Available Data</h2>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Companies</h3>
            <div class="list-group">
                @foreach (var company in Model.Companies)
                {
                    <div class="list-group-item">
                        <h5>@company.Name</h5>
                        <p class="mb-1"><strong>ID:</strong> @company.Id</p>
                        <small>@company.Address</small>
                    </div>
                }
            </div>
        </div>
        
        <div class="col-md-6">
            <h3>Employees</h3>
            <div class="list-group">
                @foreach (var employee in Model.Employees)
                {
                    <div class="list-group-item">
                        <h5>@employee.FirstName @employee.LastName</h5>
                        <p class="mb-1"><strong>ID:</strong> @employee.Id</p>
                        <p class="mb-1"><strong>Company ID:</strong> @employee.CompanyId</p>
                        <small>@employee.Position - @employee.Department</small>
                        <br/>
                        <a href="/Payroll/Process?companyId=@employee.CompanyId&employeeId=@employee.Id" class="btn btn-sm btn-primary mt-2">
                            Process Payroll
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>